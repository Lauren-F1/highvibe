{
  "entities": {
    "User": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "displayName": {
          "type": "string"
        },
        "photoURL": {
          "type": "string",
          "format": "uri"
        },
        "roles": {
          "type": "object",
          "properties": {
            "guide": {
              "type": "boolean"
            },
            "host": {
              "type": "boolean"
            },
            "vendor": {
              "type": "boolean"
            }
          }
        },
        "primaryRole": {
          "type": "string",
          "enum": [
            "guide",
            "host",
            "vendor"
          ]
        },
        "profileStatus": {
          "type": "string",
          "enum": [
            "incomplete",
            "pending_review",
            "active"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "guideHomeBaseLabel": {
          "type": "string",
          "description": "Label for the guide's home base location (e.g., 'Bali, Indonesia')."
        },
        "guideCanTravel": {
          "type": "boolean",
          "description": "Whether the guide is willing to travel for retreats."
        },
        "guideTravelRadiusMiles": {
          "type": "number",
          "description": "The maximum distance in miles a guide is willing to travel."
        },
        "guideRemotePlanningOK": {
          "type": "boolean",
          "description": "Whether the guide is open to remote planning."
        },
        "guideBaseLat": {
          "type": "number",
          "description": "Latitude of the guide's home base."
        },
        "guideBaseLng": {
          "type": "number",
          "description": "Longitude of the guide's home base."
        }
      },
      "required": [
        "email",
        "createdAt",
        "roles",
        "profileStatus"
      ]
    },
    "WaitlistSeeker": {
      "title": "Waitlist Seeker",
      "description": "A user who has signed up for the waitlist.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user signed up."
        },
        "sourcePage": {
          "type": "string",
          "description": "The page from which the user signed up."
        },
        "filtersSnapshot": {
          "type": "object",
          "properties": {
            "experienceType": {
              "type": "string"
            },
            "destination": {
              "type": "string"
            },
            "regionCountry": {
              "type": "string"
            },
            "investmentRange": {
              "type": "string"
            },
            "timing": {
              "type": "string"
            }
          },
          "description": "A snapshot of the user's filter selections."
        },
        "status": {
          "type": "string",
          "enum": [
            "active",
            "unsubscribed"
          ]
        }
      },
      "required": [
        "email",
        "createdAt",
        "status"
      ]
    },
    "ContactSubmission": {
      "title": "Contact Submission",
      "description": "A message submitted through the contact form.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "role": {
          "type": "string",
          "enum": [
            "Seeker",
            "Guide",
            "Host",
            "Vendor",
            "Other"
          ]
        },
        "message": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "userId": {
          "type": "string"
        },
        "pageContext": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "email",
        "message",
        "createdAt"
      ]
    },
    "Host": {
      "title": "Host",
      "description": "A user who lists a space for retreats.",
      "type": "object",
      "properties": {
        "userId": {
          "$ref": "#/backend/entities/User"
        },
        "name": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "capacity": {
          "type": "number"
        },
        "bedrooms": {
          "type": "number"
        },
        "bathrooms": {
          "type": "number"
        },
        "pricePerNight": {
          "type": "number"
        },
        "propertyType": {
          "type": "string"
        },
        "hostLat": {
          "type": "number",
          "description": "Latitude of the host property."
        },
        "hostLng": {
          "type": "number",
          "description": "Longitude of the host property."
        },
        "hostAddress": {
          "type": "string",
          "description": "Full address of the host property."
        },
        "hostCity": {
          "type": "string",
          "description": "City of the host property."
        },
        "hostStateRegion": {
          "type": "string",
          "description": "State or region of the host property."
        }
      },
      "required": [
        "userId",
        "name",
        "location"
      ]
    },
    "Vendor": {
      "title": "Vendor",
      "description": "A user who provides services for retreats.",
      "type": "object",
      "properties": {
        "userId": {
          "$ref": "#/backend/entities/User"
        },
        "name": {
          "type": "string"
        },
        "vendorCategory": {
          "type": "string",
          "description": "The primary category of service offered by the vendor."
        },
        "location": {
          "type": "string"
        },
        "vendorLat": {
          "type": "number",
          "description": "Latitude of the vendor's base location."
        },
        "vendorLng": {
          "type": "number",
          "description": "Longitude of the vendor's base location."
        },
        "vendorServiceRadiusMiles": {
          "type": "number",
          "description": "Service radius in miles from the base location."
        },
        "vendorBaseLocationLabel": {
          "type": "string",
          "description": "Label for the vendor's base location (e.g., 'Bali, Indonesia')."
        },
        "vendorVibeTags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tags describing the vendor's vibe or style."
        },
        "startingPrice": {
          "type": "number",
          "description": "The starting price for the vendor's services."
        },
        "isSample": {
          "type": "boolean",
          "description": "Indicates if this is a sample vendor for preview purposes."
        }
      },
      "required": [
        "userId",
        "name",
        "vendorCategory",
        "location"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/User"
      },
      "description": "User profile information."
    },
    "/waitlist_seekers/{seekerId}": {
      "schema": {
        "$ref": "#/backend/entities/WaitlistSeeker"
      },
      "description": "Collection of users who have signed up for the waitlist."
    },
    "/contact_submissions/{submissionId}": {
      "schema": {
        "$ref": "#/backend/entities/ContactSubmission"
      },
      "description": "Collection of contact form submissions."
    },
    "/hosts/{hostId}": {
      "schema": {
        "$ref": "#/backend/entities/Host"
      },
      "description": "Host profile and space listings."
    },
    "/vendors/{vendorId}": {
      "schema": {
        "$ref": "#/backend/entities/Vendor"
      },
      "description": "Vendor profile and service listings."
    }
  }
}
