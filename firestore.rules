rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Access is granted if the user has an 'admin' custom claim set to true.
      return request.auth != null && request.auth.token.admin == true;
    }

    match /users/{userId} {
      // A user can read their own profile, and admins can read any profile.
      allow read: if request.auth.uid == userId || isAdmin();

      // A user can create their own profile document upon signup.
      allow create: if request.auth.uid == userId;
      
      // A user can update their own profile document.
      // For this app, we are allowing users to add new roles from the account settings page.
      // In a production app with stricter role control, this might be handled by a Cloud Function.
      allow update: if request.auth.uid == userId;
    }

    match /waitlist_seekers/{seekerId} {
      // Anyone can add themselves to the waitlist.
      allow create: if request.resource.data.email is string &&
                     request.resource.data.email == request.resource.data.email.lower() &&
                     request.resource.data.status == 'active' &&
                     request.resource.data.createdAt == request.time;
      
      // Only admins can read, update, or delete waitlist entries.
      allow read, update, delete: if isAdmin();
    }
  }
}
