rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      // Public profile data is readable by anyone.
      // Private data like email should not be world-readable.
      allow read: if true; 

      // A user can create their own profile document upon signup.
      allow create: if isOwner(userId);
      
      // A user can update their own profile document.
      allow update: if isOwner(userId);
    }

    match /waitlist_seekers/{seekerId} {
      // Anyone can add themselves to the waitlist.
      allow create: if request.resource.data.email is string &&
                     request.resource.data.email == request.resource.data.email.lower() &&
                     request.resource.data.status == 'active' &&
                     request.resource.data.createdAt == request.time;
      
      // Only admins can read, update, or delete waitlist entries.
      allow read, update, delete: if isAdmin();
    }

    match /contact_submissions/{submissionId} {
      // Anyone can submit the contact form.
      allow create: if request.resource.data.email is string &&
                     request.resource.data.name is string &&
                     request.resource.data.message is string &&
                     request.resource.data.createdAt == request.time;
      
      // Only admins can read, update, or delete submissions.
      allow read, update, delete: if isAdmin();
    }

    match /conversations/{conversationId} {
      // Only participants of the conversation can read or write to it.
      allow read, update, create: if isAuthenticated() && request.auth.uid in resource.data.participants;
      allow delete: if false; // Disallow deleting conversations for now.

      match /messages/{messageId} {
        // Only participants of the parent conversation can read or write messages.
        allow read, create: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.senderId;
      }
    }

    match /manifestations/{manifestationId} {
      // A user can create their own manifestation.
      allow create: if isAuthenticated() && request.resource.data.seeker_id == request.auth.uid;
    
      // The owner of a manifestation can read or update it. Admin can also read/update.
      allow read, update: if isAuthenticated() && (resource.data.seeker_id == request.auth.uid || isAdmin());

      // Manifestations can't be deleted by users.
      allow delete: if isAdmin();
    }

    match /matches/{matchId} {
        // Matches are created by server-side logic (admin).
        allow create, update, delete: if isAdmin();
        // A match can be read by the matched provider or the manifestation seeker.
        allow read: if isAuthenticated() && (resource.data.provider_id == request.auth.uid || get(/databases/$(database)/documents/manifestations/$(resource.data.manifestation_id)).data.seeker_id == request.auth.uid);
    }

    match /proposals/{proposalId} {
      // A provider can create a proposal for a manifestation.
      allow create: if isAuthenticated() && request.resource.data.provider_id == request.auth.uid;
      // The seeker can update the status (accept/decline), the provider can withdraw (update status).
      allow update: if isAuthenticated() && (request.resource.data.provider_id == request.auth.uid || get(/databases/$(database)/documents/manifestations/$(resource.data.manifestation_id)).data.seeker_id == request.auth.uid);
      // A proposal can be read by the seeker who owns the manifestation and the provider who wrote it.
      allow read: if isAuthenticated() && (resource.data.provider_id == request.auth.uid || get(/databases/$(database)/documents/manifestations/$(resource.data.manifestation_id)).data.seeker_id == request.auth.uid);
      allow delete: if false; // Disallow deletion for record keeping.
    }

    match /bookings/{bookingId} {
      // Bookings are created by a trusted server process after payment.
      allow create: if isAdmin();
      
      // The seeker who made the booking and any involved provider can read it.
      allow read: if isAuthenticated() && (
                    resource.data.seekerId == request.auth.uid ||
                    request.auth.uid in resource.data.lineItems.map(item => item.providerId) ||
                    isAdmin()
                  );

      // Bookings are immutable by clients once created.
      allow update, delete: if isAdmin();
    }

    match /notifications/{notificationId} {
        allow create: if isAdmin(); // Created by server logic
        allow read, update: if isAuthenticated() && resource.data.userId == request.auth.uid; // Only readable/updatable by the recipient
        allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    match /manifest_credits/{creditId} {
      // Credits are created by server-side logic (admin).
      allow create: if isAdmin();
      // A credit can be read by the seeker who owns it or an admin.
      allow read: if isAuthenticated() && (resource.data.seeker_id == request.auth.uid || isAdmin());
      // Credits are updated by server-side logic (admin) when redeemed or expired.
      allow update: if isAdmin();
      allow delete: if false;
    }
  }
}